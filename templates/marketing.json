{
  "$schema": "https://hivellm.org/schemas/classify-template-v1.json",
  "version": "1.0",
  
  "metadata": {
    "name": "marketing",
    "display_name": "Marketing Documents",
    "description": "Classification template for marketing documents including campaigns, content, analytics reports, and marketing materials",
    "domains": ["marketing", "advertising", "branding", "content"],
    "priority": 82,
    
    "indicators": [
      "campaign", "marketing", "advertising", "content",
      "brand", "social media", "seo", "email marketing",
      "conversion", "engagement", "roi", "ctr", "impressions",
      "landing page", "ab test", "funnel", "lead generation"
    ],
    
    "document_types": [
      "campaign_brief", "content_calendar", "marketing_report",
      "analytics_report", "brand_guidelines", "creative_brief",
      "marketing_plan", "social_media_plan", "email_campaign"
    ],
    
    "example_titles": [
      "Q1 2025 Marketing Campaign",
      "Social Media Analytics Report",
      "Brand Guidelines v2.0",
      "Email Campaign Performance",
      "Content Calendar January 2025",
      "Product Launch Campaign Brief"
    ],
    
    "use_cases": [
      "Campaign planning and tracking",
      "Marketing performance analysis",
      "Content management and planning",
      "Brand consistency management",
      "Marketing ROI tracking"
    ]
  },
  
  "llm_config": {
    "provider": "deepseek",
    "model": "deepseek-chat",
    "temperature": 0.2,
    "max_tokens": 2000,
    "system_prompt": "You are an expert marketing analyst. Extract campaign details, target audiences, channels, metrics (CTR, conversion, engagement), budgets, timelines, and creative assets. Identify objectives, KPIs, and performance data. Preserve exact numerical metrics and dates.",
    "fallback_models": ["gpt-4o-mini", "gemini-2.0-flash"]
  },
  
  "document_types": [
    {
      "type": "campaign_brief",
      "display_name": "Campaign Brief",
      "description": "Marketing campaign brief or plan",
      "indicators": ["campaign", "objective", "target audience", "channels"],
      "required_entities": ["campaign_name", "objective", "target_audience"],
      "optional_entities": ["budget", "timeline", "metrics"],
      "priority": 100
    },
    {
      "type": "marketing_report",
      "display_name": "Marketing Report",
      "description": "Marketing performance or analytics report",
      "indicators": ["report", "performance", "metrics", "roi", "results"],
      "required_entities": ["period", "metrics"],
      "optional_entities": ["comparison", "recommendations"],
      "priority": 95
    }
  ],
  
  "entity_definitions": [
    {
      "type": "Campaign",
      "description": "Marketing campaign",
      "properties": {
        "name": { "type": "string", "required": true },
        "objective": { "type": "string", "required": true },
        "start_date": { "type": "date", "required": false },
        "end_date": { "type": "date", "required": false },
        "budget": { "type": "number", "required": false },
        "status": { "type": "enum", "values": ["planning", "active", "completed", "paused"] }
      },
      "extraction_methods": ["llm"]
    },
    {
      "type": "Metric",
      "description": "Marketing metric or KPI",
      "properties": {
        "name": { "type": "string", "required": true },
        "value": { "type": "number", "required": true },
        "unit": { "type": "string", "required": false },
        "target": { "type": "number", "required": false }
      },
      "extraction_methods": ["llm", "pattern"]
    },
    {
      "type": "Channel",
      "description": "Marketing channel",
      "properties": {
        "name": { "type": "enum", "values": ["email", "social_media", "seo", "ppc", "content", "events", "partnerships"], "required": true },
        "budget": { "type": "number", "required": false }
      },
      "extraction_methods": ["llm"]
    },
    {
      "type": "TargetAudience",
      "description": "Target audience segment",
      "properties": {
        "name": { "type": "string", "required": true },
        "description": { "type": "string", "required": false },
        "size": { "type": "number", "required": false }
      },
      "extraction_methods": ["llm"]
    }
  ],
  
  "relationship_definitions": [
    {
      "type": "TARGETS",
      "description": "Campaign targets audience",
      "source": "Campaign",
      "target": ["TargetAudience"],
      "properties": {},
      "extraction_methods": ["llm"]
    },
    {
      "type": "USES_CHANNEL",
      "description": "Campaign uses marketing channel",
      "source": "Campaign",
      "target": ["Channel"],
      "properties": {
        "budget": { "type": "number", "required": false }
      },
      "extraction_methods": ["llm"]
    },
    {
      "type": "MEASURES",
      "description": "Campaign measures metric",
      "source": "Campaign",
      "target": ["Metric"],
      "properties": {
        "target": { "type": "number", "required": false }
      },
      "extraction_methods": ["llm"]
    }
  ],
  
  "graph_schema": {
    "nodes": [
      {
        "type": "MarketingDocument",
        "labels": ["Document", "MarketingDocument"],
        "required_properties": ["id", "title", "doc_type"],
        "optional_properties": ["campaign", "period", "channels"],
        "indexes": [
          { "property": "id", "type": "unique" },
          { "property": "campaign", "type": "index" }
        ]
      },
      {
        "type": "Campaign",
        "labels": ["Campaign"],
        "required_properties": ["name", "objective"],
        "optional_properties": ["start_date", "end_date", "budget", "status"],
        "indexes": [{ "property": "name", "type": "index" }]
      }
    ],
    
    "relationships": [
      {
        "type": "TARGETS",
        "source": "Campaign",
        "target": "TargetAudience",
        "properties": [],
        "required": []
      },
      {
        "type": "USES_CHANNEL",
        "source": "Campaign",
        "target": "Channel",
        "properties": ["budget"],
        "required": []
      }
    ]
  },
  
  "fulltext_schema": {
    "required_fields": ["title", "domain", "doc_type"],
    
    "extracted_fields": [
      {
        "name": "campaign_name",
        "type": "string",
        "description": "Campaign name",
        "extraction_method": "llm",
        "index": true
      },
      {
        "name": "channels",
        "type": "array",
        "description": "Marketing channels used",
        "extraction_method": "llm",
        "index": true
      },
      {
        "name": "target_audience",
        "type": "array",
        "description": "Target audience segments",
        "extraction_method": "llm",
        "index": true
      },
      {
        "name": "metrics",
        "type": "array",
        "description": "Marketing metrics tracked",
        "extraction_method": "llm",
        "index": true
      },
      {
        "name": "budget",
        "type": "number",
        "description": "Campaign budget",
        "extraction_method": "pattern",
        "index": false
      }
    ],
    
    "keyword_extraction": {
      "enabled": true,
      "method": "tfidf",
      "min_frequency": 2,
      "max_keywords": 25,
      "exclude_stopwords": true,
      "preserve_entities": true
    },
    
    "categories": ["marketing", "campaign", "analytics", "content"],
    
    "summary": {
      "enabled": true,
      "method": "llm",
      "max_length": 400
    }
  },
  
  "extraction_rules": [
    {
      "name": "extract_campaigns",
      "description": "Extract campaign information",
      "method": "llm",
      "prompt": "Extract all campaign details including name, objectives, target audience, channels, budget, and timeline."
    },
    {
      "name": "extract_metrics",
      "description": "Extract marketing metrics",
      "method": "llm",
      "prompt": "Extract all marketing metrics including CTR, conversion rate, engagement rate, impressions, clicks, leads, and ROI with their values."
    }
  ],
  
  "validation_rules": [
    {
      "field": "campaign_name",
      "rules": [
        { "type": "min_length", "value": 2 }
      ]
    }
  ]
}

