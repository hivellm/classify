{
  "metadata": {
    "name": "academic_paper",
    "display_name": "Academic Papers",
    "version": "1.0.0",
    "description": "Academic Paper Classification - For research papers, theses, and scientific articles",
    "domains": ["research", "academic", "science", "education"],
    "doc_types": [
      "research_paper",
      "thesis",
      "dissertation",
      "conference_paper",
      "journal_article",
      "technical_report",
      "preprint",
      "review_paper",
      "case_study"
    ]
  },
  "llm_config": {
    "system_prompt": "You are a research paper analyst. Extract academic entities, citations, methodologies, and findings from scientific papers.",
    "temperature": 0.2,
    "max_tokens": 4000
  },
  "entity_definitions": [
    {
      "type": "Author",
      "description": "Paper author or researcher",
      "properties": [
        { "name": "name", "type": "string", "required": true },
        { "name": "affiliation", "type": "string", "required": false },
        { "name": "email", "type": "string", "required": false },
        { "name": "orcid", "type": "string", "required": false },
        { "name": "corresponding", "type": "boolean", "required": false }
      ]
    },
    {
      "type": "Institution",
      "description": "Research institution or university",
      "properties": [
        { "name": "name", "type": "string", "required": true },
        { "name": "location", "type": "string", "required": false },
        { "name": "country", "type": "string", "required": false },
        { "name": "department", "type": "string", "required": false }
      ]
    },
    {
      "type": "ResearchTopic",
      "description": "Main research topic or field",
      "properties": [
        { "name": "name", "type": "string", "required": true },
        { "name": "field", "type": "string", "required": false },
        { "name": "keywords", "type": "array", "required": false }
      ]
    },
    {
      "type": "Methodology",
      "description": "Research methodology or approach",
      "properties": [
        { "name": "name", "type": "string", "required": true },
        { "name": "type", "type": "string", "required": false },
        { "name": "description", "type": "string", "required": false }
      ]
    },
    {
      "type": "Dataset",
      "description": "Dataset used in research",
      "properties": [
        { "name": "name", "type": "string", "required": true },
        { "name": "size", "type": "string", "required": false },
        { "name": "source", "type": "string", "required": false },
        { "name": "public", "type": "boolean", "required": false }
      ]
    },
    {
      "type": "Model",
      "description": "Machine learning model or theoretical model",
      "properties": [
        { "name": "name", "type": "string", "required": true },
        { "name": "type", "type": "string", "required": false },
        { "name": "architecture", "type": "string", "required": false },
        { "name": "parameters", "type": "string", "required": false }
      ]
    },
    {
      "type": "Metric",
      "description": "Evaluation metric or performance measure",
      "properties": [
        { "name": "name", "type": "string", "required": true },
        { "name": "value", "type": "string", "required": false },
        { "name": "unit", "type": "string", "required": false },
        { "name": "baseline", "type": "string", "required": false }
      ]
    },
    {
      "type": "Finding",
      "description": "Key research finding or contribution",
      "properties": [
        { "name": "description", "type": "string", "required": true },
        { "name": "significance", "type": "string", "required": false },
        { "name": "evidence", "type": "string", "required": false }
      ]
    },
    {
      "type": "Citation",
      "description": "Referenced paper or work",
      "properties": [
        { "name": "title", "type": "string", "required": true },
        { "name": "authors", "type": "array", "required": false },
        { "name": "year", "type": "string", "required": false },
        { "name": "venue", "type": "string", "required": false },
        { "name": "doi", "type": "string", "required": false }
      ]
    },
    {
      "type": "Experiment",
      "description": "Experimental setup or study",
      "properties": [
        { "name": "name", "type": "string", "required": true },
        { "name": "objective", "type": "string", "required": false },
        { "name": "setup", "type": "string", "required": false },
        { "name": "duration", "type": "string", "required": false }
      ]
    },
    {
      "type": "Software",
      "description": "Software tool or framework used",
      "properties": [
        { "name": "name", "type": "string", "required": true },
        { "name": "version", "type": "string", "required": false },
        { "name": "purpose", "type": "string", "required": false },
        { "name": "url", "type": "string", "required": false }
      ]
    },
    {
      "type": "FundingSource",
      "description": "Grant or funding agency",
      "properties": [
        { "name": "name", "type": "string", "required": true },
        { "name": "grant_number", "type": "string", "required": false },
        { "name": "amount", "type": "string", "required": false }
      ]
    }
  ],
  "relationship_definitions": [
    {
      "type": "AUTHORED_BY",
      "description": "Paper authored by researcher",
      "from": ["ResearchTopic"],
      "to": ["Author"],
      "properties": [
        { "name": "order", "type": "number", "required": false },
        { "name": "contribution", "type": "string", "required": false }
      ]
    },
    {
      "type": "AFFILIATED_WITH",
      "description": "Author affiliated with institution",
      "from": ["Author"],
      "to": ["Institution"],
      "properties": [
        { "name": "position", "type": "string", "required": false }
      ]
    },
    {
      "type": "USES_METHODOLOGY",
      "description": "Research uses specific methodology",
      "from": ["ResearchTopic", "Experiment"],
      "to": ["Methodology"],
      "properties": []
    },
    {
      "type": "ANALYZES",
      "description": "Study analyzes dataset",
      "from": ["Experiment", "Methodology"],
      "to": ["Dataset"],
      "properties": [
        { "name": "preprocessing", "type": "string", "required": false }
      ]
    },
    {
      "type": "PROPOSES",
      "description": "Paper proposes model or method",
      "from": ["ResearchTopic"],
      "to": ["Model", "Methodology"],
      "properties": [
        { "name": "novelty", "type": "string", "required": false }
      ]
    },
    {
      "type": "EVALUATES_WITH",
      "description": "Model evaluated using metric",
      "from": ["Model", "Experiment"],
      "to": ["Metric"],
      "properties": [
        { "name": "improvement", "type": "string", "required": false }
      ]
    },
    {
      "type": "FINDS",
      "description": "Research discovers finding",
      "from": ["Experiment", "ResearchTopic"],
      "to": ["Finding"],
      "properties": [
        { "name": "confidence", "type": "string", "required": false }
      ]
    },
    {
      "type": "CITES",
      "description": "Paper cites other work",
      "from": ["ResearchTopic"],
      "to": ["Citation"],
      "properties": [
        { "name": "context", "type": "string", "required": false },
        { "name": "type", "type": "string", "required": false }
      ]
    },
    {
      "type": "BUILDS_ON",
      "description": "Research builds on cited work",
      "from": ["ResearchTopic", "Methodology"],
      "to": ["Citation"],
      "properties": [
        { "name": "extension", "type": "string", "required": false }
      ]
    },
    {
      "type": "IMPLEMENTS",
      "description": "Uses software implementation",
      "from": ["Experiment", "Model"],
      "to": ["Software"],
      "properties": []
    },
    {
      "type": "FUNDED_BY",
      "description": "Research funded by source",
      "from": ["ResearchTopic", "Author"],
      "to": ["FundingSource"],
      "properties": []
    },
    {
      "type": "COMPARES_TO",
      "description": "Model compared to baseline",
      "from": ["Model"],
      "to": ["Model", "Citation"],
      "properties": [
        { "name": "outcome", "type": "string", "required": false }
      ]
    }
  ],
  "classification_fields": {
    "title": {
      "type": "string",
      "required": true,
      "description": "Paper title"
    },
    "doc_type": {
      "type": "string",
      "required": true,
      "description": "Type of academic document",
      "enum": [
        "research_paper",
        "thesis",
        "dissertation",
        "conference_paper",
        "journal_article",
        "technical_report",
        "preprint",
        "review_paper",
        "case_study"
      ]
    },
    "field": {
      "type": "string",
      "required": false,
      "description": "Research field (AI, biology, physics, etc)"
    },
    "venue": {
      "type": "string",
      "required": false,
      "description": "Publication venue (conference, journal)"
    },
    "year": {
      "type": "string",
      "required": false,
      "description": "Publication year"
    },
    "abstract": {
      "type": "string",
      "required": false,
      "description": "Paper abstract summary"
    }
  },
  "examples": [
    {
      "input": "# Deep Learning for Image Classification\n\n**Authors:** John Doe (Stanford University), Jane Smith (MIT)\n\n## Abstract\nWe propose a novel convolutional neural network architecture achieving 95.2% accuracy on ImageNet.\n\n## Methodology\nWe trained ResNet-50 on ImageNet dataset using PyTorch framework.\n\n## Results\nOur model achieves 95.2% top-1 accuracy, outperforming the baseline by 3.1%.",
      "output": {
        "entities": [
          {
            "type": "Author",
            "properties": {
              "name": "John Doe",
              "affiliation": "Stanford University"
            }
          },
          {
            "type": "Author",
            "properties": {
              "name": "Jane Smith",
              "affiliation": "MIT"
            }
          },
          {
            "type": "Institution",
            "properties": {
              "name": "Stanford University"
            }
          },
          {
            "type": "Institution",
            "properties": {
              "name": "MIT"
            }
          },
          {
            "type": "ResearchTopic",
            "properties": {
              "name": "Deep Learning for Image Classification",
              "field": "Computer Vision"
            }
          },
          {
            "type": "Model",
            "properties": {
              "name": "ResNet-50",
              "type": "Convolutional Neural Network"
            }
          },
          {
            "type": "Dataset",
            "properties": {
              "name": "ImageNet"
            }
          },
          {
            "type": "Software",
            "properties": {
              "name": "PyTorch",
              "purpose": "Training framework"
            }
          },
          {
            "type": "Metric",
            "properties": {
              "name": "top-1 accuracy",
              "value": "95.2%",
              "baseline": "92.1%"
            }
          }
        ],
        "relationships": [
          {
            "type": "AUTHORED_BY",
            "source": "Deep Learning for Image Classification",
            "target": "John Doe"
          },
          {
            "type": "AFFILIATED_WITH",
            "source": "John Doe",
            "target": "Stanford University"
          },
          {
            "type": "PROPOSES",
            "source": "Deep Learning for Image Classification",
            "target": "ResNet-50"
          },
          {
            "type": "ANALYZES",
            "source": "ResNet-50",
            "target": "ImageNet"
          },
          {
            "type": "IMPLEMENTS",
            "source": "ResNet-50",
            "target": "PyTorch"
          }
        ]
      }
    }
  ]
}

