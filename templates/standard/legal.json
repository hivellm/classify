{
  "$schema": "https://hivellm.org/schemas/classify-template-v1.json",
  "version": "1.0",
  
  "metadata": {
    "name": "legal",
    "display_name": "Legal Documents",
    "description": "Classification template for legal documents including contracts, laws, regulations, and cases",
    "domains": ["legal", "compliance"],
    "priority": 100,
    
    "indicators": [
      "agreement", "contract", "parties", "whereas",
      "jurisdiction", "law", "regulation", "clause",
      "hereby", "party", "effective date", "termination",
      "liability", "confidentiality", "arbitration"
    ],
    
    "document_types": [
      "contract", "law", "regulation", "case",
      "legal_opinion", "memorandum", "agreement",
      "license", "lease", "settlement"
    ],
    
    "example_titles": [
      "Service Agreement",
      "Employment Contract",
      "Privacy Policy",
      "Terms and Conditions",
      "Case Law Summary",
      "Non-Disclosure Agreement",
      "License Agreement"
    ],
    
    "use_cases": [
      "Contract analysis and party extraction",
      "Legal compliance checking",
      "Case law classification",
      "Regulatory document indexing",
      "Legal research and discovery"
    ]
  },
  
  "llm_config": {
    "provider": "deepseek",
    "model": "deepseek-chat",
    "temperature": 0.1,
    "max_tokens": 2000,
    "system_prompt": "You are an expert legal document classifier. Extract parties, clauses, dates, jurisdictions, and legal obligations with high accuracy. Identify contract types, legal references, and compliance requirements. Always preserve exact legal terminology and citations.",
    "fallback_models": [
      "gpt-4o-mini",
      "claude-3-5-haiku-latest",
      "gemini-2.0-flash"
    ]
  },
  
  "document_types": [
    {
      "type": "contract",
      "display_name": "Contract",
      "description": "Legal contract or agreement between parties",
      "indicators": ["contract", "agreement", "parties", "consideration"],
      "required_entities": ["party", "date", "jurisdiction"],
      "optional_entities": ["clause", "obligation", "payment_terms"],
      "priority": 100
    },
    {
      "type": "law",
      "display_name": "Law",
      "description": "Legislative act or statute",
      "indicators": ["statute", "act", "section", "chapter"],
      "required_entities": ["jurisdiction", "law_number", "date"],
      "optional_entities": ["amendment", "reference"],
      "priority": 90
    },
    {
      "type": "regulation",
      "display_name": "Regulation",
      "description": "Administrative rule or regulation",
      "indicators": ["regulation", "rule", "compliance", "requirements"],
      "required_entities": ["jurisdiction", "regulation_number"],
      "optional_entities": ["effective_date", "scope"],
      "priority": 85
    }
  ],
  
  "entity_definitions": [
    {
      "type": "Party",
      "description": "Legal entity (person or organization) involved in the document",
      "properties": {
        "name": { "type": "string", "required": true },
        "role": { 
          "type": "enum", 
          "values": ["provider", "client", "lessor", "lessee", "licensor", "licensee", "plaintiff", "defendant"],
          "required": true
        },
        "entity_type": { "type": "enum", "values": ["person", "company", "organization", "government"] },
        "identifier": { "type": "string", "required": false }
      },
      "extraction_methods": ["ner", "pattern", "llm"]
    },
    {
      "type": "Date",
      "description": "Important dates in legal document",
      "properties": {
        "date": { "type": "date", "required": true },
        "date_type": { 
          "type": "enum", 
          "values": ["effective", "expiration", "signed", "execution", "termination", "renewal"],
          "required": true
        }
      },
      "extraction_methods": ["pattern", "llm"],
      "patterns": [
        "\\d{4}-\\d{2}-\\d{2}",
        "\\d{2}/\\d{2}/\\d{4}",
        "(?:Jan|Feb|Mar|Apr|May|Jun|Jul|Aug|Sep|Oct|Nov|Dec)\\s+\\d{1,2},\\s+\\d{4}"
      ]
    },
    {
      "type": "Jurisdiction",
      "description": "Legal jurisdiction or governing law",
      "properties": {
        "location": { "type": "string", "required": true },
        "level": { "type": "enum", "values": ["federal", "state", "county", "international"] }
      },
      "extraction_methods": ["llm", "pattern"]
    },
    {
      "type": "Clause",
      "description": "Specific clause or provision in contract",
      "properties": {
        "clause_type": {
          "type": "enum",
          "values": ["termination", "liability", "confidentiality", "payment", "arbitration", "indemnification"],
          "required": true
        },
        "text": { "type": "string", "required": true },
        "section_number": { "type": "string" }
      },
      "extraction_methods": ["llm", "pattern"]
    },
    {
      "type": "Amount",
      "description": "Monetary amounts in legal document",
      "properties": {
        "value": { "type": "number", "required": true },
        "currency": { "type": "string", "required": true },
        "amount_type": {
          "type": "enum",
          "values": ["contract_value", "penalty", "fee", "damages", "payment"],
          "required": false
        }
      },
      "extraction_methods": ["pattern", "llm"]
    }
  ],
  
  "relationship_definitions": [
    {
      "type": "PARTY_TO",
      "description": "Entity is a party to the legal document",
      "source": "Document",
      "target": ["Party"],
      "properties": {
        "role": {
          "type": "enum",
          "values": ["provider", "client", "witness", "signatory", "counsel"],
          "required": true
        },
        "date_signed": { "type": "date", "required": false }
      },
      "extraction_methods": ["llm", "heuristic"]
    },
    {
      "type": "REFERENCES",
      "description": "Document references another document or law",
      "source": "Document",
      "target": ["Document", "Law", "Regulation"],
      "properties": {
        "context": { "type": "string", "required": false },
        "citation": { "type": "string", "required": false }
      },
      "extraction_methods": ["pattern", "llm"],
      "patterns": [
        "pursuant to",
        "in accordance with",
        "as per",
        "reference to",
        "subject to"
      ]
    },
    {
      "type": "HAS_CLAUSE",
      "description": "Document contains specific clause",
      "source": "Document",
      "target": ["Clause"],
      "properties": {
        "section": { "type": "string", "required": false },
        "mandatory": { "type": "boolean", "required": false }
      },
      "extraction_methods": ["llm", "pattern"]
    },
    {
      "type": "GOVERNED_BY",
      "description": "Document is governed by specific jurisdiction",
      "source": "Document",
      "target": ["Jurisdiction"],
      "properties": {
        "governing_law": { "type": "string", "required": false }
      },
      "extraction_methods": ["llm"]
    }
  ],
  
  "graph_schema": {
    "nodes": [
      {
        "type": "LegalDocument",
        "labels": ["Document", "LegalDocument"],
        "description": "Legal document node in graph",
        "required_properties": ["id", "title", "doc_type", "domain", "created_at"],
        "optional_properties": [
          "jurisdiction", "effective_date", "expiration_date",
          "status", "parties", "contract_value"
        ],
        "indexes": [
          { "property": "id", "type": "unique" },
          { "property": "doc_type", "type": "index" },
          { "property": "jurisdiction", "type": "index" },
          { "property": "effective_date", "type": "index" }
        ]
      },
      {
        "type": "Party",
        "labels": ["Entity", "Party"],
        "description": "Party entity (person or organization)",
        "required_properties": ["name", "entity_type"],
        "optional_properties": ["role", "identifier", "contact"],
        "indexes": [
          { "property": "name", "type": "fulltext" }
        ]
      },
      {
        "type": "Clause",
        "labels": ["Content", "Clause"],
        "description": "Contract clause or provision",
        "required_properties": ["clause_type", "text"],
        "optional_properties": ["section_number", "mandatory"],
        "indexes": [
          { "property": "clause_type", "type": "index" }
        ]
      }
    ],
    
    "relationships": [
      {
        "type": "PARTY_TO",
        "source": "LegalDocument",
        "target": "Party",
        "properties": ["role", "date_signed"],
        "required": ["role"]
      },
      {
        "type": "HAS_CLAUSE",
        "source": "LegalDocument",
        "target": "Clause",
        "properties": ["section", "mandatory"],
        "required": []
      },
      {
        "type": "REFERENCES",
        "source": "LegalDocument",
        "target": ["LegalDocument", "Law"],
        "properties": ["context", "citation"],
        "required": []
      },
      {
        "type": "GOVERNED_BY",
        "source": "LegalDocument",
        "target": "Jurisdiction",
        "properties": ["governing_law"],
        "required": []
      }
    ]
  },
  
  "fulltext_schema": {
    "required_fields": ["title", "domain", "doc_type", "created_at"],
    
    "extracted_fields": [
      {
        "name": "parties",
        "type": "array",
        "description": "List of parties involved",
        "extraction_method": "ner",
        "index": true
      },
      {
        "name": "effective_date",
        "type": "date",
        "description": "Document effective date",
        "extraction_method": "pattern",
        "patterns": ["\\d{4}-\\d{2}-\\d{2}"],
        "index": true
      },
      {
        "name": "jurisdiction",
        "type": "string",
        "description": "Legal jurisdiction",
        "extraction_method": "llm",
        "index": true
      },
      {
        "name": "contract_value",
        "type": "number",
        "description": "Total contract value",
        "extraction_method": "pattern",
        "patterns": ["\\$[0-9,]+"],
        "index": false
      },
      {
        "name": "clause_types",
        "type": "array",
        "description": "Types of clauses present",
        "extraction_method": "llm",
        "index": true
      }
    ],
    
    "keyword_extraction": {
      "enabled": true,
      "method": "tfidf",
      "min_frequency": 2,
      "max_keywords": 20,
      "exclude_stopwords": true,
      "preserve_entities": true
    },
    
    "categories": [
      "legal", "contract", "agreement",
      "compliance", "regulatory"
    ],
    
    "summary": {
      "enabled": true,
      "method": "llm",
      "max_length": 500
    }
  },
  
  "extraction_rules": [
    {
      "name": "extract_parties",
      "description": "Extract party names from legal document",
      "method": "ner",
      "entity_types": ["PERSON", "ORG"],
      "confidence_threshold": 0.8,
      "post_processing": ["deduplicate", "normalize_whitespace", "title_case"]
    },
    {
      "name": "extract_dates",
      "description": "Extract important dates",
      "method": "pattern",
      "patterns": [
        {
          "pattern": "effective date:?\\s*([\\w\\s,]+)",
          "type": "effective_date",
          "flags": "i"
        },
        {
          "pattern": "expiration date:?\\s*([\\w\\s,]+)",
          "type": "expiration_date",
          "flags": "i"
        }
      ],
      "date_parser": "flexible"
    },
    {
      "name": "extract_clauses",
      "description": "Extract contract clauses",
      "method": "section_detection",
      "patterns": ["Article \\d+", "Section \\d+\\.\\d+", "Clause \\d+", "Paragraph \\d+"],
      "include_content": true,
      "max_clause_length": 2000
    },
    {
      "name": "extract_jurisdiction",
      "description": "Extract governing jurisdiction",
      "method": "llm",
      "prompt": "Identify the governing jurisdiction and applicable law mentioned in this document."
    }
  ],
  
  "validation_rules": [
    {
      "field": "parties",
      "rules": [
        { "type": "required", "message": "At least one party must be identified" },
        { "type": "min_length", "value": 1 },
        { "type": "max_length", "value": 10 }
      ]
    },
    {
      "field": "effective_date",
      "rules": [
        { "type": "date_format", "format": "YYYY-MM-DD" },
        { "type": "date_range", "min": "1900-01-01", "max": "2100-12-31" }
      ]
    },
    {
      "field": "confidence",
      "rules": [
        { "type": "min_value", "value": 0.6, "message": "Confidence too low for legal documents" }
      ]
    }
  ]
}

