{
  "$schema": "https://hivellm.org/schemas/classify-template-v1.json",
  "version": "1.0",
  
  "metadata": {
    "name": "hr",
    "display_name": "HR Documents",
    "description": "Classification template for human resources documents including resumes, policies, evaluations, and job descriptions",
    "domains": ["hr", "recruitment", "human_resources"],
    "priority": 85,
    
    "indicators": [
      "resume", "cv", "employee", "skills", "experience",
      "education", "job", "position", "candidate",
      "policy", "evaluation", "performance", "salary",
      "benefits", "onboarding", "training"
    ],
    
    "document_types": [
      "resume", "cv", "job_description", "policy",
      "evaluation", "offer_letter", "employee_handbook",
      "performance_review", "training_material"
    ],
    
    "example_titles": [
      "Software Engineer Resume",
      "Job Description - Senior Developer",
      "Employee Handbook",
      "Performance Review Q4 2024",
      "Offer Letter",
      "Remote Work Policy"
    ],
    
    "use_cases": [
      "Resume screening and candidate matching",
      "Policy management and compliance",
      "Performance review analysis",
      "Skills inventory and talent management",
      "Job posting and recruitment"
    ]
  },
  
  "llm_config": {
    "provider": "deepseek",
    "model": "deepseek-chat",
    "temperature": 0.15,
    "max_tokens": 2000,
    "system_prompt": "You are an expert HR document classifier. Extract candidate information, skills, experience, education, certifications, and employment history with high accuracy. Identify job requirements, responsibilities, and qualifications. Preserve exact job titles, company names, and technical skills.",
    "fallback_models": [
      "gpt-4o-mini",
      "claude-3-5-haiku-latest",
      "gemini-2.0-flash"
    ]
  },
  
  "document_types": [
    {
      "type": "resume",
      "display_name": "Resume/CV",
      "description": "Candidate resume or curriculum vitae",
      "indicators": ["resume", "cv", "experience", "education", "skills"],
      "required_entities": ["person", "skills", "experience"],
      "optional_entities": ["education", "certification", "contact"],
      "priority": 100
    },
    {
      "type": "job_description",
      "display_name": "Job Description",
      "description": "Job posting or description",
      "indicators": ["job description", "position", "requirements", "responsibilities"],
      "required_entities": ["job_title", "requirements"],
      "optional_entities": ["salary_range", "benefits", "location"],
      "priority": 90
    },
    {
      "type": "policy",
      "display_name": "HR Policy",
      "description": "Company policy or procedure",
      "indicators": ["policy", "procedure", "guidelines", "rules"],
      "required_entities": ["policy_name", "effective_date"],
      "optional_entities": ["scope", "compliance"],
      "priority": 80
    }
  ],
  
  "entity_definitions": [
    {
      "type": "Person",
      "description": "Candidate or employee",
      "properties": {
        "name": { "type": "string", "required": true },
        "email": { "type": "string", "required": false },
        "phone": { "type": "string", "required": false },
        "location": { "type": "string", "required": false }
      },
      "extraction_methods": ["ner", "pattern"]
    },
    {
      "type": "Skill",
      "description": "Technical or soft skill",
      "properties": {
        "name": { "type": "string", "required": true },
        "skill_type": {
          "type": "enum",
          "values": ["technical", "soft", "language", "tool"],
          "required": false
        },
        "proficiency": {
          "type": "enum",
          "values": ["beginner", "intermediate", "advanced", "expert"],
          "required": false
        }
      },
      "extraction_methods": ["llm", "pattern"]
    },
    {
      "type": "Experience",
      "description": "Work experience",
      "properties": {
        "company": { "type": "string", "required": true },
        "position": { "type": "string", "required": true },
        "start_date": { "type": "date", "required": false },
        "end_date": { "type": "date", "required": false },
        "duration": { "type": "string", "required": false },
        "description": { "type": "string", "required": false }
      },
      "extraction_methods": ["llm"]
    },
    {
      "type": "Education",
      "description": "Educational background",
      "properties": {
        "institution": { "type": "string", "required": true },
        "degree": { "type": "string", "required": true },
        "field": { "type": "string", "required": false },
        "graduation_date": { "type": "date", "required": false },
        "gpa": { "type": "number", "required": false }
      },
      "extraction_methods": ["llm", "pattern"]
    },
    {
      "type": "Certification",
      "description": "Professional certification",
      "properties": {
        "name": { "type": "string", "required": true },
        "issuer": { "type": "string", "required": false },
        "date_obtained": { "type": "date", "required": false },
        "expiration_date": { "type": "date", "required": false }
      },
      "extraction_methods": ["llm"]
    }
  ],
  
  "relationship_definitions": [
    {
      "type": "HAS_SKILL",
      "description": "Person has skill",
      "source": "Person",
      "target": ["Skill"],
      "properties": {
        "proficiency": { "type": "string", "required": false },
        "years_experience": { "type": "number", "required": false }
      },
      "extraction_methods": ["llm"]
    },
    {
      "type": "WORKED_AT",
      "description": "Person worked at company",
      "source": "Person",
      "target": ["Experience"],
      "properties": {
        "position": { "type": "string", "required": true },
        "start_date": { "type": "date", "required": false },
        "end_date": { "type": "date", "required": false }
      },
      "extraction_methods": ["llm"]
    },
    {
      "type": "EDUCATED_AT",
      "description": "Person educated at institution",
      "source": "Person",
      "target": ["Education"],
      "properties": {
        "degree": { "type": "string", "required": true },
        "graduation_date": { "type": "date", "required": false }
      },
      "extraction_methods": ["llm"]
    },
    {
      "type": "CERTIFIED_IN",
      "description": "Person holds certification",
      "source": "Person",
      "target": ["Certification"],
      "properties": {
        "date_obtained": { "type": "date", "required": false }
      },
      "extraction_methods": ["llm"]
    }
  ],
  
  "graph_schema": {
    "nodes": [
      {
        "type": "HRDocument",
        "labels": ["Document", "HRDocument"],
        "required_properties": ["id", "title", "doc_type", "domain"],
        "optional_properties": ["person", "job_title", "created_at"],
        "indexes": [
          { "property": "id", "type": "unique" },
          { "property": "doc_type", "type": "index" }
        ]
      },
      {
        "type": "Person",
        "labels": ["Entity", "Person"],
        "required_properties": ["name"],
        "optional_properties": ["email", "phone", "location"],
        "indexes": [
          { "property": "name", "type": "fulltext" }
        ]
      },
      {
        "type": "Skill",
        "labels": ["Skill"],
        "required_properties": ["name"],
        "optional_properties": ["skill_type", "proficiency"],
        "indexes": [
          { "property": "name", "type": "index" }
        ]
      }
    ],
    
    "relationships": [
      {
        "type": "HAS_SKILL",
        "source": "Person",
        "target": "Skill",
        "properties": ["proficiency", "years_experience"],
        "required": []
      },
      {
        "type": "WORKED_AT",
        "source": "Person",
        "target": "Experience",
        "properties": ["position", "start_date", "end_date"],
        "required": ["position"]
      }
    ]
  },
  
  "fulltext_schema": {
    "required_fields": ["title", "domain", "doc_type"],
    
    "extracted_fields": [
      {
        "name": "person_name",
        "type": "string",
        "description": "Candidate or employee name",
        "extraction_method": "ner",
        "index": true
      },
      {
        "name": "skills",
        "type": "array",
        "description": "List of skills",
        "extraction_method": "llm",
        "index": true
      },
      {
        "name": "experience_years",
        "type": "number",
        "description": "Total years of experience",
        "extraction_method": "llm",
        "index": true
      },
      {
        "name": "education_level",
        "type": "string",
        "description": "Highest education level",
        "extraction_method": "llm",
        "index": true
      },
      {
        "name": "job_title",
        "type": "string",
        "description": "Current or desired job title",
        "extraction_method": "llm",
        "index": true
      }
    ],
    
    "keyword_extraction": {
      "enabled": true,
      "method": "tfidf",
      "min_frequency": 1,
      "max_keywords": 25,
      "exclude_stopwords": true,
      "preserve_entities": true
    },
    
    "categories": [
      "hr", "recruitment", "resume", "talent"
    ],
    
    "summary": {
      "enabled": true,
      "method": "llm",
      "max_length": 400
    }
  },
  
  "extraction_rules": [
    {
      "name": "extract_person",
      "description": "Extract candidate/employee information",
      "method": "ner",
      "entity_types": ["PERSON"],
      "confidence_threshold": 0.8,
      "post_processing": ["deduplicate"]
    },
    {
      "name": "extract_skills",
      "description": "Extract skills from document",
      "method": "llm",
      "prompt": "Extract all technical skills, soft skills, and tools mentioned in this document."
    },
    {
      "name": "extract_experience",
      "description": "Extract work experience",
      "method": "llm",
      "prompt": "Extract work experience including company names, positions, dates, and responsibilities."
    }
  ],
  
  "validation_rules": [
    {
      "field": "person_name",
      "rules": [
        { "type": "min_length", "value": 2 }
      ]
    },
    {
      "field": "skills",
      "rules": [
        { "type": "min_length", "value": 1, "message": "At least one skill must be identified" }
      ]
    }
  ]
}

