{
  "metadata": {
    "name": "software_project",
    "display_name": "Software Project Documents",
    "version": "1.0.0",
    "description": "Software Project Classification - For source code, scripts, documentation, and project artifacts",
    "domains": ["software", "programming", "development", "engineering"],
    "doc_types": [
      "source_code",
      "script",
      "configuration",
      "documentation",
      "readme",
      "changelog",
      "test",
      "build_script",
      "deployment",
      "api_spec"
    ]
  },
  "llm_config": {
    "system_prompt": "You are a software architecture analyst. Extract code structure, dependencies, and relationships from software projects.",
    "temperature": 0.2,
    "max_tokens": 4000
  },
  "entity_definitions": [
    {
      "type": "Module",
      "description": "A code module, package, or namespace",
      "properties": [
        { "name": "name", "type": "string", "required": true },
        { "name": "language", "type": "string", "required": false },
        { "name": "path", "type": "string", "required": false },
        { "name": "description", "type": "string", "required": false },
        { "name": "version", "type": "string", "required": false }
      ]
    },
    {
      "type": "Function",
      "description": "A function, method, or procedure",
      "properties": [
        { "name": "name", "type": "string", "required": true },
        { "name": "signature", "type": "string", "required": false },
        { "name": "purpose", "type": "string", "required": false },
        { "name": "complexity", "type": "string", "required": false },
        { "name": "async", "type": "boolean", "required": false }
      ]
    },
    {
      "type": "Class",
      "description": "A class, interface, or type definition",
      "properties": [
        { "name": "name", "type": "string", "required": true },
        { "name": "type", "type": "string", "required": false },
        { "name": "abstract", "type": "boolean", "required": false },
        { "name": "purpose", "type": "string", "required": false }
      ]
    },
    {
      "type": "Dependency",
      "description": "External library or package dependency",
      "properties": [
        { "name": "name", "type": "string", "required": true },
        { "name": "version", "type": "string", "required": false },
        { "name": "registry", "type": "string", "required": false },
        { "name": "purpose", "type": "string", "required": false }
      ]
    },
    {
      "type": "Configuration",
      "description": "Configuration file or setting",
      "properties": [
        { "name": "name", "type": "string", "required": true },
        { "name": "type", "type": "string", "required": false },
        { "name": "scope", "type": "string", "required": false },
        { "name": "purpose", "type": "string", "required": false }
      ]
    },
    {
      "type": "API",
      "description": "API endpoint or interface",
      "properties": [
        { "name": "path", "type": "string", "required": true },
        { "name": "method", "type": "string", "required": false },
        { "name": "description", "type": "string", "required": false },
        { "name": "authenticated", "type": "boolean", "required": false }
      ]
    },
    {
      "type": "Database",
      "description": "Database, table, or data model",
      "properties": [
        { "name": "name", "type": "string", "required": true },
        { "name": "type", "type": "string", "required": false },
        { "name": "schema", "type": "string", "required": false }
      ]
    },
    {
      "type": "Test",
      "description": "Test suite or test case",
      "properties": [
        { "name": "name", "type": "string", "required": true },
        { "name": "type", "type": "string", "required": false },
        { "name": "coverage", "type": "string", "required": false },
        { "name": "target", "type": "string", "required": false }
      ]
    },
    {
      "type": "Script",
      "description": "Build, deployment, or automation script",
      "properties": [
        { "name": "name", "type": "string", "required": true },
        { "name": "purpose", "type": "string", "required": false },
        { "name": "language", "type": "string", "required": false },
        { "name": "trigger", "type": "string", "required": false }
      ]
    },
    {
      "type": "Documentation",
      "description": "README, guide, or documentation file",
      "properties": [
        { "name": "title", "type": "string", "required": true },
        { "name": "type", "type": "string", "required": false },
        { "name": "audience", "type": "string", "required": false },
        { "name": "sections", "type": "array", "required": false }
      ]
    }
  ],
  "relationship_definitions": [
    {
      "type": "IMPORTS",
      "description": "Module imports another module",
      "from": ["Module", "Class", "Function"],
      "to": ["Module", "Dependency"],
      "properties": [
        { "name": "alias", "type": "string", "required": false },
        { "name": "selective", "type": "boolean", "required": false }
      ]
    },
    {
      "type": "DEPENDS_ON",
      "description": "Component depends on another",
      "from": ["Module", "Class", "Function", "Script"],
      "to": ["Dependency", "Module", "Configuration"],
      "properties": [
        { "name": "required", "type": "boolean", "required": false },
        { "name": "version_constraint", "type": "string", "required": false }
      ]
    },
    {
      "type": "CALLS",
      "description": "Function calls another function",
      "from": ["Function", "Class"],
      "to": ["Function", "API"],
      "properties": [
        { "name": "frequency", "type": "string", "required": false },
        { "name": "async", "type": "boolean", "required": false }
      ]
    },
    {
      "type": "IMPLEMENTS",
      "description": "Class implements interface or extends parent",
      "from": ["Class"],
      "to": ["Class"],
      "properties": [
        { "name": "type", "type": "string", "required": false }
      ]
    },
    {
      "type": "CONTAINS",
      "description": "Module contains classes or functions",
      "from": ["Module"],
      "to": ["Class", "Function", "Configuration"],
      "properties": []
    },
    {
      "type": "TESTS",
      "description": "Test validates component",
      "from": ["Test"],
      "to": ["Module", "Class", "Function", "API"],
      "properties": [
        { "name": "coverage", "type": "string", "required": false },
        { "name": "type", "type": "string", "required": false }
      ]
    },
    {
      "type": "DOCUMENTS",
      "description": "Documentation describes component",
      "from": ["Documentation"],
      "to": ["Module", "Class", "Function", "API"],
      "properties": []
    },
    {
      "type": "ACCESSES",
      "description": "Component accesses database",
      "from": ["Module", "Class", "Function"],
      "to": ["Database"],
      "properties": [
        { "name": "operation", "type": "string", "required": false },
        { "name": "orm", "type": "string", "required": false }
      ]
    },
    {
      "type": "BUILDS",
      "description": "Script builds or processes artifact",
      "from": ["Script"],
      "to": ["Module", "Documentation"],
      "properties": [
        { "name": "stage", "type": "string", "required": false }
      ]
    },
    {
      "type": "EXPOSES",
      "description": "Module exposes API",
      "from": ["Module"],
      "to": ["API"],
      "properties": [
        { "name": "version", "type": "string", "required": false }
      ]
    }
  ],
  "classification_fields": {
    "title": {
      "type": "string",
      "required": true,
      "description": "Project or component name"
    },
    "doc_type": {
      "type": "string",
      "required": true,
      "description": "Type of software artifact",
      "enum": [
        "source_code",
        "script",
        "configuration",
        "documentation",
        "readme",
        "changelog",
        "test",
        "build_script",
        "deployment",
        "api_spec"
      ]
    },
    "language": {
      "type": "string",
      "required": false,
      "description": "Primary programming language"
    },
    "framework": {
      "type": "string",
      "required": false,
      "description": "Main framework used"
    },
    "architecture": {
      "type": "string",
      "required": false,
      "description": "Architectural pattern (MVC, microservices, etc)"
    }
  },
  "examples": [
    {
      "input": "# User Authentication Module\n\nImplements JWT-based authentication with bcrypt password hashing.\n\n```typescript\nimport bcrypt from 'bcrypt';\nimport jwt from 'jsonwebtoken';\n\nexport class AuthService {\n  async login(email: string, password: string) {\n    // Implementation\n  }\n}\n```",
      "output": {
        "entities": [
          {
            "type": "Module",
            "properties": {
              "name": "AuthService",
              "language": "TypeScript",
              "description": "User authentication module"
            }
          },
          {
            "type": "Dependency",
            "properties": {
              "name": "bcrypt",
              "purpose": "Password hashing"
            }
          },
          {
            "type": "Dependency",
            "properties": {
              "name": "jsonwebtoken",
              "purpose": "JWT token generation"
            }
          },
          {
            "type": "Class",
            "properties": {
              "name": "AuthService",
              "purpose": "Authentication service"
            }
          },
          {
            "type": "Function",
            "properties": {
              "name": "login",
              "signature": "async login(email: string, password: string)",
              "async": true
            }
          }
        ],
        "relationships": [
          {
            "type": "IMPORTS",
            "source": "AuthService",
            "target": "bcrypt"
          },
          {
            "type": "IMPORTS",
            "source": "AuthService",
            "target": "jsonwebtoken"
          },
          {
            "type": "CONTAINS",
            "source": "AuthService",
            "target": "login"
          }
        ]
      }
    }
  ]
}

