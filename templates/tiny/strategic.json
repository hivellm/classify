{
  "$schema": "https://hivellm.org/schemas/classify-template-tiny-v1.json",
  "version": "1.0",
  
  "metadata": {
    "name": "strategic",
    "display_name": "Strategic (Tiny)",
    "description": "Lightweight template for strategic planning documents",
    "domains": ["strategy", "business_planning"],
    "priority": 84
  },
  
  "llm_config": {
    "provider": "deepseek",
    "model": "deepseek-chat",
    "temperature": 0.0,
    "max_tokens": 450,
    "system_prompt": "Extract title, timeframe, and main goal. Concise."
  },
  
  "entity_definitions": [
    {
      "type": "Document",
      "properties": {
        "title": { "type": "string", "required": true },
        "timeframe": { "type": "string", "required": false }
      }
    },
    {
      "type": "Goal",
      "properties": {
        "name": { "type": "string", "required": true }
      }
    }
  ],
  
  "relationship_definitions": [
    {
      "type": "HAS_GOAL",
      "source": "Document",
      "target": "Goal"
    }
  ],
  
  "graph_schema": {
    "nodes": [
      {
        "type": "Document",
        "labels": ["Document", "Strategic"],
        "required_properties": ["id", "title"],
        "indexes": [
          { "property": "id", "type": "unique" }
        ]
      },
      {
        "type": "Goal",
        "labels": ["Goal"],
        "required_properties": ["name"],
        "indexes": [
          { "property": "name", "type": "index" }
        ]
      }
    ],
    "relationships": [
      {
        "type": "HAS_GOAL",
        "source": "Document",
        "target": "Goal"
      }
    ]
  },
  
  "fulltext_schema": {
    "required_fields": ["title", "domain", "doc_type"],
    
    "extracted_fields": [
      {
        "name": "timeframe",
        "type": "string",
        "extraction_method": "llm",
        "index": true
      }
    ],
    
    "keyword_extraction": {
      "enabled": true,
      "method": "tfidf",
      "min_frequency": 3,
      "max_keywords": 6
    },
    
    "summary": {
      "enabled": true,
      "method": "llm",
      "max_length": 90
    }
  },
  
  "extraction_rules": [
    {
      "name": "extract_strategic",
      "method": "llm",
      "prompt": "Extract timeframe and main goal"
    }
  ],
  
  "validation_rules": [
    {
      "field": "title",
      "rules": [
        { "type": "required" },
        { "type": "max_length", "value": 170 }
      ]
    }
  ]
}

