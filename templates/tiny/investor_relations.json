{
  "$schema": "https://hivellm.org/schemas/classify-template-tiny-v1.json",
  "version": "1.0",
  
  "metadata": {
    "name": "investor_relations",
    "display_name": "Investor Relations (Tiny)",
    "description": "Lightweight template for investor documents",
    "domains": ["investor_relations", "public_company"],
    "priority": 87
  },
  
  "llm_config": {
    "provider": "deepseek",
    "model": "deepseek-chat",
    "temperature": 0.0,
    "max_tokens": 450,
    "system_prompt": "Extract title, period, and key metrics. Concise."
  },
  
  "entity_definitions": [
    {
      "type": "Document",
      "properties": {
        "title": { "type": "string", "required": true },
        "period": { "type": "string", "required": false }
      }
    },
    {
      "type": "Metric",
      "properties": {
        "name": { "type": "string", "required": true }
      }
    }
  ],
  
  "relationship_definitions": [
    {
      "type": "HAS_METRIC",
      "source": "Document",
      "target": "Metric"
    }
  ],
  
  "graph_schema": {
    "nodes": [
      {
        "type": "Document",
        "labels": ["Document", "Investor"],
        "required_properties": ["id", "title"],
        "indexes": [
          { "property": "id", "type": "unique" }
        ]
      },
      {
        "type": "Metric",
        "labels": ["Metric"],
        "required_properties": ["name"],
        "indexes": [
          { "property": "name", "type": "index" }
        ]
      }
    ],
    "relationships": [
      {
        "type": "HAS_METRIC",
        "source": "Document",
        "target": "Metric"
      }
    ]
  },
  
  "fulltext_schema": {
    "required_fields": ["title", "domain", "doc_type"],
    
    "extracted_fields": [
      {
        "name": "period",
        "type": "string",
        "extraction_method": "llm",
        "index": true
      }
    ],
    
    "keyword_extraction": {
      "enabled": true,
      "method": "tfidf",
      "min_frequency": 3,
      "max_keywords": 7
    },
    
    "summary": {
      "enabled": true,
      "method": "llm",
      "max_length": 90
    }
  },
  
  "extraction_rules": [
    {
      "name": "extract_investor",
      "method": "llm",
      "prompt": "Extract period and 2-3 key metrics"
    }
  ],
  
  "validation_rules": [
    {
      "field": "title",
      "rules": [
        { "type": "required" },
        { "type": "max_length", "value": 180 }
      ]
    }
  ]
}

