{
  "$schema": "https://hivellm.org/schemas/classify-template-tiny-v1.json",
  "version": "1.0",
  
  "metadata": {
    "name": "legal",
    "display_name": "Legal (Tiny)",
    "description": "Lightweight template for legal documents",
    "domains": ["legal", "contracts"],
    "priority": 95
  },
  
  "llm_config": {
    "provider": "deepseek",
    "model": "deepseek-chat",
    "temperature": 0.0,
    "max_tokens": 500,
    "system_prompt": "Extract title, document type, and parties. Be concise."
  },
  
  "entity_definitions": [
    {
      "type": "Document",
      "properties": {
        "title": { "type": "string", "required": true },
        "doc_type": { "type": "string", "required": true }
      }
    },
    {
      "type": "Party",
      "properties": {
        "name": { "type": "string", "required": true }
      }
    }
  ],
  
  "relationship_definitions": [
    {
      "type": "HAS_PARTY",
      "source": "Document",
      "target": "Party"
    }
  ],
  
  "graph_schema": {
    "nodes": [
      {
        "type": "Document",
        "labels": ["Document", "Legal"],
        "required_properties": ["id", "title", "doc_type"],
        "indexes": [
          { "property": "id", "type": "unique" }
        ]
      },
      {
        "type": "Party",
        "labels": ["Party"],
        "required_properties": ["name"],
        "indexes": [
          { "property": "name", "type": "index" }
        ]
      }
    ],
    "relationships": [
      {
        "type": "HAS_PARTY",
        "source": "Document",
        "target": "Party"
      }
    ]
  },
  
  "fulltext_schema": {
    "required_fields": ["title", "domain", "doc_type"],
    
    "extracted_fields": [
      {
        "name": "parties",
        "type": "array",
        "extraction_method": "llm",
        "index": true
      }
    ],
    
    "keyword_extraction": {
      "enabled": true,
      "method": "tfidf",
      "min_frequency": 3,
      "max_keywords": 8
    },
    
    "summary": {
      "enabled": true,
      "method": "llm",
      "max_length": 100
    }
  },
  
  "extraction_rules": [
    {
      "name": "extract_legal",
      "method": "llm",
      "prompt": "Extract document type and parties"
    }
  ],
  
  "validation_rules": [
    {
      "field": "title",
      "rules": [
        { "type": "required" },
        { "type": "max_length", "value": 200 }
      ]
    }
  ]
}

