{
  "$schema": "https://hivellm.org/schemas/classify-template-tiny-v1.json",
  "version": "1.0",
  
  "metadata": {
    "name": "software_project",
    "display_name": "Software Project (Tiny)",
    "description": "Lightweight template for code and software projects",
    "domains": ["software", "programming", "development"],
    "priority": 89
  },
  
  "llm_config": {
    "provider": "deepseek",
    "model": "deepseek-chat",
    "temperature": 0.0,
    "max_tokens": 500,
    "system_prompt": "Extract title, language, and main module. Keep minimal."
  },
  
  "entity_definitions": [
    {
      "type": "Document",
      "properties": {
        "title": { "type": "string", "required": true },
        "language": { "type": "string", "required": false }
      }
    },
    {
      "type": "Module",
      "properties": {
        "name": { "type": "string", "required": true }
      }
    }
  ],
  
  "relationship_definitions": [
    {
      "type": "HAS_MODULE",
      "source": "Document",
      "target": "Module"
    }
  ],
  
  "graph_schema": {
    "nodes": [
      {
        "type": "Document",
        "labels": ["Document", "Code"],
        "required_properties": ["id", "title"],
        "indexes": [
          { "property": "id", "type": "unique" }
        ]
      },
      {
        "type": "Module",
        "labels": ["Module"],
        "required_properties": ["name"],
        "indexes": [
          { "property": "name", "type": "index" }
        ]
      }
    ],
    "relationships": [
      {
        "type": "HAS_MODULE",
        "source": "Document",
        "target": "Module"
      }
    ]
  },
  
  "fulltext_schema": {
    "required_fields": ["title", "domain", "doc_type"],
    
    "extracted_fields": [
      {
        "name": "language",
        "type": "string",
        "extraction_method": "llm",
        "index": true
      },
      {
        "name": "modules",
        "type": "array",
        "extraction_method": "llm",
        "index": true
      }
    ],
    
    "keyword_extraction": {
      "enabled": true,
      "method": "tfidf",
      "min_frequency": 2,
      "max_keywords": 8
    },
    
    "summary": {
      "enabled": true,
      "method": "llm",
      "max_length": 100
    }
  },
  
  "extraction_rules": [
    {
      "name": "extract_code",
      "method": "llm",
      "prompt": "Extract language and 2-3 main modules"
    }
  ],
  
  "validation_rules": [
    {
      "field": "title",
      "rules": [
        { "type": "required" },
        { "type": "max_length", "value": 200 }
      ]
    }
  ]
}

